<header class="p-3 bg-dark text-white">
  <div class="container">
    <nav class="d-flex flex-wrap align-items-center">
      <ul class="nav me-lg-auto">
        <li><%= link_to "CASINO", root_path, class: "navbar-brand fs-1" %></li>
      </ul>

      <ul class="nav col-lg-auto">
        <% if user_signed_in? %>
          <li class="dropdown">
            <%= link_to "#", class: "nav-link px-2 dropdown-toggle text-white",
                        data: { "bs-toggle": "dropdown" } do %>
              Account <b class="caret"></b>
            <% end %>

            <ul class="dropdown-menu">
              <li><%= link_to "Settings", edit_user_registration_path,
                            class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= button_to "Log out", destroy_user_session_path,
                              method: :delete,
                              class: "dropdown-item" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path,
                        class: "nav-link px-2 text-white" %></li>
          <li><%= link_to "Registration", new_user_registration_path,
                        class: "nav-link px-2 text-white" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
